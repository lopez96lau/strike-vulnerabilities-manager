generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vulnerability {
  id          Int   @id @default(autoincrement())
  title       String
  description String
  severity    String   // Baja, Media, Alta, Cr√≠tica
  cwe         String?
  status      String   // Pending Fix, In Progress, Solved, False Positive
  assignedTo  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
